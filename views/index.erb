<html>
  <head>
    <style>
      body
      {
        background: #333333;
        font-family: arial;
        font-size: 27pt;
        color: #aaa;
      }

      p
      {
          text-align: center;
      }
      #container
      {
        background-color: #222222;
        margin-left: auto;
        margin-right: auto;
        margin-top: 200px;
        width: 600px;
        height: 400px;
        padding: 30px;
        border-radius: 30px;
        -webkit-box-shadow: 0px 0px 13px 2px #<%=color%>;
        -moz-box-shadow: 0px 0px 13px 2px #<%=color%>;
        box-shadow: 0px 0px 13px 2px #<%=color%>;
      }

      #input
      {
        background-color: rgba(0,0,0,0.21);
        border-style: solid;
        border-width: 0px;
        width: 450px;
        height: 70px;
        margin-left: 75px;
        margin-top: 20px;
        border-radius: 10px;
        font-family: arial;
        font-size: 30pt;
        padding: 10px;
        color: rgba(0,0,0,0.71);
        outline: none;
      }

      #button
      {
        color: #aaa;
        font-family: arial;
        font-size: 20pt;
        margin-left: 230px;
        margin-top: 45px;
        width: 150px;
        height: 50px;
        border-radius: 4px;
        border-style: solid;
        border-width: 2px;
        border-color: rgba(255,255,255,0.46);
        background-color: rgba(0,0,0,0);
        transition: 0.3s;
      }

      #button:hover
      {
        text-shadow: 1px 0px 5px rgba(255,255,255,0.3);
        -webkit-box-shadow: 0px 0px 7px 2px rgba(255,255,255,0.3);
        -moz-box-shadow: 0px 0px 7px 2px rgba(255,255,255,0.3);
        box-shadow: 0px 0px 7px 2px rgba(255,255,255,0.3);
      }
    </style>
  </head>
  <body>
    <div id="container">
    <p id="msg">
      <%= msg %>
    </p>
    <form>
      <input id="input" type='text' name='guess' value="" autocomplete="off"/>
      <input id="button" type='submit' value='Guess!' />
    </form>
    <p id="attempts">
      Attempts remaining: <%= att %>
    </p>
  </div>
  </body>
</html>
